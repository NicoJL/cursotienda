<p id="notice"><%= notice %></p>

<h1>Orders</h1>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>Name</th>
      <th>Phone</th>
      <th>Address</th>
      <th>Interior</th>
      <th>String</th>
      <th>Colony</th>
      <th>City</th>
      <th>State</th>
      <th>Zipcode</th>
      <th>Status</th>
      <th>Total</th>
      <th>Payment identifier</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.email %></td>
        <td><%= order.name %></td>
        <td><%= order.phone %></td>
        <td><%= order.address %></td>
        <td><%= order.interior %></td>
        <td><%= order.string %></td>
        <td><%= order.colony %></td>
        <td><%= order.city %></td>
        <td><%= order.state %></td>
        <td><%= order.zipcode %></td>
        <td><%= order.status %></td>
        <td><%= order.total %></td>
        <td><%= order.payment_identifier %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

