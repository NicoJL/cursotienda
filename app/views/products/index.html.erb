<div class="row">
  <div class="col col-12">
    <h1>Productos</h1> 
    <%= link_to 'Agregar Producto', new_product_path, class: "btn btn-success" %>
  </div>
  <div class="col col-12">
    <table class="table table-sm table-bordered border-primary mt-2">
      <tr>
        <th>Name</th>
        <th>Price</th>
        <th>Stock</th>
        <th>Min stock</th>
        <th>Status</th>
        <th>Category</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
        <% @products.each do |product| %>
          <tr>
            <td><%= product.name %></td>
            <td><%= product.price %></td>
            <td><%= product.stock %></td>
            <td><%= product.min_stock %></td>
            <td><%= product.status %></td>
            <td><%= product.category_id %></td>
            <td><%= link_to 'Mostrar', product, class: "btn btn-success" %></td>
            <td><%= link_to 'Editar', edit_product_path(product), class: "btn btn-success" %></td>
            <td><%= link_to 'Borrar', product, method: :delete, data: { confirm: 'Â¿Estas seguro de borrar el registro?' }, class: "btn btn-danger" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>


