<div class="row">
  <div class="col col-12">
    <h1>Categorias</h1> 
    <%= link_to 'Agregar Categoría', new_category_path, class: "btn btn-success" %>
  </div>
  <div class="col col-12">
    <table class="table table-sm table-bordered border-primary mt-2">
      <thead>
        <tr>
          <th>Nombre</th>
          <th>Estatus</th>
          <th>Productos</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @categories.each do |category| %>
          <tr>
            <td><%= category.name %></td>
            <td><%= set_status(category.status) %></td>
            <td><%= category.products.count %></td>
            <td><%= link_to 'Mostrar', category, class: "btn btn-success" %></td>
            <td><%= link_to 'Editar', edit_category_path(category), class: "btn btn-success" %></td>
            <td><%= link_to 'Eliminar', category, method: :delete, data: { confirm: '¿Estas seguro de eliminar el registro?' }, class: "btn btn-danger" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

